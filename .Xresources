! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2
Xft.autohint: 0
Xft.lcdfilter: lcddefault
Xft.hintstyle: hintslight
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb
Xft.letterSpace: -1
Xcursor.theme: Bluecurve
Xcursor.size: 16

! XTerm config
! xterm*metaSendsEscape: true
! xterm*reportXRes: true
xterm*termName: xterm-256color
xterm*title: term
xterm*toolBar: false
xterm*vt100.allowTitleOps: false
xterm*vt100.allowWindowOps: true
xterm*vt100.curses: true
xterm*vt100.cursorBlink: true
xterm*vt100.cursorColor: #689d6a
xterm*vt100.cursorOffTime: 350
xterm*vt100.cursorOnTime: 700
xterm*vt100.cutNewline: false
xterm*vt100.faceName: RobotoMono Nerd Font
xterm*vt100.faceSize: 12.0
xterm*vt100.locale: true
xterm*vt100.loginShell: true
xterm*vt100.scaleHeight: 0.9
xterm*vt100*translations:      #override \n\
    Ctrl <Key> +:       larger-vt-font() \n\
    Ctrl <Key> -:       smaller-vt-font() \n\
    Ctrl Shift <Key>C: copy-selection(CLIPBOARD) \n\
    Ctrl Shift <Key>V: insert-selection(CLIPBOARD)
