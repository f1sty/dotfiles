sd ()
{
  sdcv -n --utf8-output --color "$@" 2>&1 | \
    fold --width=$(tput cols) | \
    less -FRX
}
remind ()
{
  echo "mpv $HOME/src/bell.mp3" | at now + "$1" |& tail -n1
}
repo ()
{
  gh repo view --jq '.sshUrl' --json sshUrl $1
}
elastic ()
{
  curl --cacert $XDG_DATA_HOME/http_ca.crt -u elastic:$ELASTIC_PASSWORD -X $1 "https://localhost:9200$2" -H 'Content-Type: application/json' $3
}
